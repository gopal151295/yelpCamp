<% include ../partials/header.ejs %>


<div class="container">
    <header class="jumbotron">
        <h1>Welcome to Yelp Camp!</h1>
        <p>View our hand-picked campgrounds form all over the world</p>
        <p><a class="btn btn-primary btn-large" href="/campgrounds/new">Add campground</a></p>
    </header>
    <div class= "row text-center" style="display:flex; flex-wrap:wrap;">
        <% campgrounds.forEach(function(campground){%>
              <div class="col-md-3 col-sm-6">
                  <div class="thumbnail">
                      <img src="<%=campground.image%>" alt="campground">
                      <div class="caption">
                          <h4><%=campground.name%></h4>
                      </div>
                      <p>
                          <a class="btn btn-primary" href="/campgrounds/<%=campground._id%>">Details</a>
                      </p>
                  </div>
              </div>
        <%})%>
    </div>
</div>
<br>
